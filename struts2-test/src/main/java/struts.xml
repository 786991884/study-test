<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>
	<constant name="struts.devMode" value="true" />
	<!--其修改为false将禁用动态方法调用 -->
	<constant name="struts.enable.DynamicMethodInvocation" value="true"></constant>
	<!-- 添加的全局属性文件，添加多个用逗号分割，golbal,golbal1,... -->
	<constant name="struts.custom.i18n.resouces" value="golbal"></constant>
	<!-- 常量，修改struts2的和行为 -->
	<constant name="struts.ognl.allowStaticMethodAccess" value="true"></constant>
	<package name="basicstruts2" extends="struts-default">

		<!-- 记录异常 -->
		<interceptors>
			<interceptor-stack name="appDefaultStack">
				<interceptor-ref name="defaultStack">
					<param name="exception.logEnabled">true</param>
					<param name="exception.logLevel">ERROR</param>
				</interceptor-ref>
			</interceptor-stack>
		</interceptors>
		<default-interceptor-ref name="appDefaultStack"></default-interceptor-ref>



		<global-results>
			<result name="securityerror">/securityerror.jsp</result>
			<result name="error">/error.jsp</result>
		</global-results>
		<!-- 全局异常映射节点 -->
		<global-exception-mappings>
			<exception-mapping result="securityerror"
				exception="oracel.wdp.struts2.action.RegisterAction.exceptions.SecurityBreachExeception"></exception-mapping>
			<exception-mapping result="error	" exception="java.lang.Exception"></exception-mapping>
		</global-exception-mappings>
		<action name="index">
			<result>/index.jsp</result>
		</action>
		<!--一个请求过来了: url hello.action , 首先调用：hello 接着在配置文件找name为hello，我们根据class的值实例化一个，接着根据method的值去调用实例的方法 
			方法返回一个stirng值success,接着找result name为success.找到该资源响应给用户 -->
		<action name="hello" class="oracle.wdp.struts2.action.HelloWorldAction"
			method="execute">
			<result name="success">/HelloWorld.jsp</result>
		</action>
		<action name="download" class="oracle.wdp.struts2.action.DownLoadAction">
			<result name="success" type="stream"></result>
			<!-- 给Action传递参数 -->
			<param name="filePath">/1.jpg</param>
			<param name="contentType">text/plain</param>
			<param name="contentDisposition">attachment;filename="${filePath}"</param>
			<param name="inputName">inputStream</param>
		</action>
		<action name="register" class="oracle.wdp.struts2.action.RegisterAction"
			method="execute">
			<result name="success">/thankyou.jsp</result>
			<result name="input">/register.jsp</result>
		</action>
		<action name="registerInput" class="oracle.wdp.struts2.action.RegisterAction"
			method="input">
			<result name="input">/register.jsp</result>
		</action>
		<action name="upload" class="oracle.wdp.struts2.action.UploadAction">
			<param name="savePath">/upload</param>
			<result>/upload_success.jsp</result>
		</action>
		<action name="multiUpload" class="oracle.wdp.struts2.action.MultiUploadAction">
			<param name="savePath">/upload</param>
			<result>/upload_success.jsp</result>
		</action>

	</package>
</struts>
